@model IEnumerable<CMMS.Services.DTOs.ActivityLogDto>

@{
    ViewData["Title"] = "Activity Logs";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Notes</th>
            <th>Employee ID</th>
            <th>Maintenance Task ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Date</td>
                <td>@log.Notes</td>
                <td>@log.EmployeeId</td>
                <td>@log.MaintenanceTaskId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@log.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@log.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@log.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Add New Log</a>
</div>
