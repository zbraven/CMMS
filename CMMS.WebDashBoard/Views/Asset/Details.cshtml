@model AssetDto

@{
    ViewData["Title"] = "Varlık Detayları";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Varlık</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Seri Numarası</dt>
        <dd class="col-sm-10">@Model.SerialNumber</dd>

        <!-- Diğer detaylar -->
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>
